<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleTodo2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_pink</item>
        <item name="colorPrimaryVariant">@color/color_background_primary</item>
        <item name="colorOnPrimary">@color/color_navy_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_navy_blue</item>
        <item name="colorSecondaryVariant">@color/color_navy_blue</item>
        <item name="colorOnSecondary">@color/color_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_background_primary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/color_pink</item>
    </style>

    <style name="MySlider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/My_Tooltip</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="My_Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/color_white</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <item name="colorOnPrimary">@color/color_navy_blue</item>

    </style>

    <style name="MyDialog" parent="android:Theme.Material.Light.Dialog.Alert" tools:targetApi="lollipop">
        <item name="colorAccent">@color/purple_200</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/color_navy_blue</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>

</resources>